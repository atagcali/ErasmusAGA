<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://coordinatorProfile.caption"
        messagesPack="com.company.erasmusaga.web.screens.coursecoordinator">
    <data>
        <instance id="ccDc" class="com.company.erasmusaga.entity.CourseCoordinator" view="_local"/>
    </data>
    <layout>
        <vbox id="rightSide" align="MIDDLE_CENTER">
            <hbox align="MIDDLE_CENTER">
                <label id="coordinator_name" value = "Name" stylename="import-label-style" css="margin-right:75px" />
                <textField  id="input_name"  stylename="inputTf-style" editable="false" dataContainer="ccDc" property="name"/>
            </hbox>
            <hbox align="MIDDLE_CENTER">
                <label id="mail_id" value="Mail" stylename="import-label-style" css="margin-right: 90px"/>
                <textField id="input_mail"  stylename="inputTf-style" editable="false" dataContainer="ccDc" property="email"/>
            </hbox>
        </vbox>
    </layout>
</window>