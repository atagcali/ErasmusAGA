<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editApplicationScreen.caption"
        messagesPack="com.company.erasmusaga.web.screens">
    <data>
        <instance id="applicationDc" class="com.company.erasmusaga.entity.Application" view="application-view"/>
        <collection id="unisDc" class="com.company.erasmusaga.entity.University" view="_local"/>
        <collection id="commentDc" class="com.company.erasmusaga.entity.Comment" view="comment-view">
            <loader id="commentDl">
                <query>
                    <![CDATA[select e from erasmusaga_Comment e]]>
                    <condition>
                        <and>
                            <jpql>
                                <where>
                                    e.application=:application
                                </where>
                            </jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <layout>
        <vbox id="mainVBox">
            <hbox id="mainHbox">
                <vbox id="leftSide">
                    <vbox id="commentsVbox">
                    </vbox>
                    <vbox id="addCommentVbox" stylename="text-area-style">
                        <textArea id="commentTxt" caption="Please enter Your Comment" stylename="text-area-style"/>
                        <hbox id="addCommentButtons">
                            <button id="saveCommentBtn" caption="Save"/>
                            <button id="addFileBtn" caption="Upload File"/>
                        </hbox>
                    </vbox>
                </vbox>
                <vbox id="rightSide">
                    <checkBox id="seenByCC" dataContainer="applicationDc" property="seenByCC" caption="SeenByCC" align="TOP_RIGHT"/>
                    <checkBox id="seenByAdmin" dataContainer="applicationDc" property="seenByAdmin" caption="SeeByAdmin" align="TOP_RIGHT"/>
                    <hbox>
                        <label id="student_name" value = "Name" stylename="import-label-style" css="margin-right:70px" />
                        <textField  id="input_id" dataContainer="applicationDc" stylename="inputTf-style" editable="false" property="student.name" />
                    </hbox>
                    <hbox>
                        <label id="student_id" value="ID" stylename="import-label-style" css="margin-right:100px"/>
                        <textField id="input_name" dataContainer="applicationDc" stylename="inputTf-style" editable="false" property="student.bilkentID" />
                    </hbox>
                    <!--<hbox>
                        <label id="student_department" value="Department" stylename="import-label-style" css="margin-right:55px"/>
                        <textField id="input_department" dataContainer="applicationDc" stylename="inputTf-style" editable="false" property="student.department" />
                    </hbox> -->
                    <hbox>
                        <label id="total_point" value = "Total Point" stylename="import-label-style" css="margin-right: 35px"/>
                        <textField id="input_total_point" dataContainer="applicationDc" stylename="inputTf-style" editable="false" property="student.totalGrade"  />
                    </hbox>
                    <hbox>
                        <label id="duration" value="Duration" stylename="import-label-style" css="margin-right: 50px"/>
                        <textField id="input_duration" dataContainer="applicationDc" stylename="inputTf-style" editable="false" property="duration" />
                    </hbox>
                    <hbox>
                        <label id="status" value="Status" stylename="import-label-style" css="margin-right: 70px" />
                        <textField id="input_status" dataContainer="applicationDc" stylename="inputTf-style" editable="false" property="lastStatus.type.name"/>
                    </hbox>
                    <dataGrid id="unisDG" dataContainer="unisDc" css="margin-left:50px">
                        <columns>
                            <column property="name"/>
                            <column property="country"/>
                            <column property="agreementType"/>
                        </columns>
                    </dataGrid>
                    <hbox css="margin-top: 20px">
                        <button caption="Cancel Application" id="cancelBtn" stylename="cancel-btn-style"/>
                    </hbox>
                </vbox>
            </hbox>
        </vbox>
    </layout>
</window>

